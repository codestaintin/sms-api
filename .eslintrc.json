{
  "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
  },
  "extends": [
      "airbnb"
  ],
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
          "arrowFunction": true
      }
  },
  "parser": "babel-eslint",
  "rules": {
      "no-tabs": 0,
      "max-len": [1, 80, 2],
      "no-console": 1,
      "arrow-body-style": [0],
      "no-empty": 0,
      "no-debugger": 1,
      "no-var": 1,
      "arrow-parens": 0,
      "no-use-before-define": 0,
      "no-lonely-if": 0,
      "import/extensions": 0,
      "indent": ["error", 2],
      "linebreak-style": ["error","unix"],
      "quotes": ["error","single"],
      "semi": ["error","always"],
      "import/prefer-default-export": 0,
      "global-require": 0,
      "no-trailing-spaces": 0,
      "eol-last": 0,
      "no-unused-vars": 0,
      "no-underscore-dangle": 0,
      "no-alert": 0,
      "no-lone-blocks": 0,
      "one-var": 0,
      "one-var-declaration-per-line": 0,
      "new-cap": 0,
      "consistent-return": 0,
      "no-unused-expressions": 0,
      "no-param-reassign": 0,
      "comma-dangle": 0,
      "curly": ["error", "multi-line"],
      "function-paren-newline": 0,
      "import/no-named-as-default" : 0,
      "import/no-unresolved": [0, { "commonjs": true }],
      "import/no-extraneous-dependencies": [1, {"devDependencies": true}],
      "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
      "valid-jsdoc": ["error", {
          "requireReturn": false,
          "requireReturnType": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
      }],
      "require-jsdoc": ["error", {
          "require": {
              "FunctionDeclaration": true,
              "MethodDefinition": false,
              "ClassDeclaration": true
          }
      }]
  }
}
